<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/darkblue"

        android:gravity="center"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/success" />

    <!--android:src="@drawable/dialog_cross"-->

    <TextView
        android:id="@+id/namex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:text="Generate Id Card  "
        android:visibility="gone"
        android:textColor="@color/blue"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/namex"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name">







                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:orientation="vertical">

                        <!--android:minWidth="300dp"-->
                        <!--android:minHeight="400dp"-->


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/navyblue"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:padding="10dp"
                            android:text="Sign Up Details"

                            android:textColor="@color/white"
                            android:textSize="15sp" />







                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Name"
                                android:textColor="@color/navyblue" />

                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Phone Number"
                                android:textColor="@color/navyblue" />

                            <EditText
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:inputType="number"
                                android:maxLength="10"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                
                                android:textColor="@color/blue" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/aadhaar"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Emial"
                                android:textColor="@color/navyblue" />

                            <EditText
                                android:id="@+id/email"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                
                                android:textColor="@color/blue" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Gender"
                                android:textColor="@color/darkblue" />


                            <com.doi.spinnersearchable.SearchableSpinner
                                android:id="@+id/gender"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/customborder_dialog"
                                android:textColor="@color/blue" />

                        </LinearLayout>



                        <LinearLayout
                            android:id="@+id/purposel"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical" />
































                        <LinearLayout
                            android:id="@+id/enterlocationl"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="3dp"
                            android:layout_marginTop="2dp"
                            android:background="#fff"
                            android:elevation="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp"
                                android:text="Enter Address (House Number/ Building Name)"
                                android:textColor="@color/navyblue" />

                            <EditText
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_weight="1"
                                android:gravity="left|center_vertical|center_horizontal"
                                android:padding="5dp" />
                        </LinearLayout>




                        <!-- Route Details Ends -->


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/layout"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@color/navyblue"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Back"
                    android:textColor="#ffffffff" />

                <Button
                    android:id="@+id/signup"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Sign up"
                    android:textColor="#ffffffff" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>